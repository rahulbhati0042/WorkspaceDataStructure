package com.permutation.combination;

public class StringCombination {

	public static void main(String[] args) {
		String str = "abcd";
		int s = 0;
		int e = str.length() - 1;

		__printAllCombinations(str, s, e);

	}

	private static void __printAllCombinations(String seed, int s, int e) {
		if (s == e) {
			System.out.println(seed);
			return;
		}

		String str = seed;
		for (int i = s; i <= e; i++) {
			char[] arr= str.toCharArray();
			char tmp = arr[s];
			arr[s]= arr[i];
			arr[i] = tmp;
			str = arr.toString();
			//str = str.replace(str.charAt(s), str.charAt(i));
			//str = str.

			__printAllCombinations(str, s + 1, e);
			 tmp = arr[s];
			arr[s]= arr[i];
			arr[i] = tmp;
			str = arr.toString();
		}
	}
}
