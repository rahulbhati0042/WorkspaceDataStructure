package com.stoogesort;

import java.util.Arrays;

public class StoogeSort {
	static int arr[] = { 5, 6, 1 };

	public static void main(String[] args) {

		int lb = 0;
		int ub = arr.length - 1;
		
		entry(arr,lb,ub);
		System.out.println(Arrays.toString(arr));
	}

	public static int[] entry(int arr[],int lb,int ub){
		if (arr[lb] > arr[ub]) {
			int tmp = arr[lb];
			arr[lb] = arr[ub];
			arr[ub] = tmp;
		}
		int nthPart = (arr.length/3)-1;
		int subArr[] = new int[arr.length-1];
		int e=0;
		while(e<arr.length){
			subArr[e]=arr[e];
			e++;
		}
		//left();
		//right();
		//left();
		System.out.println(Arrays.toString(subArr));
		return null;
	}
	
	
	
	static int[] left(int[] left) {
		return arr;

	}

	static int right(int right) {
		return right;

	}

}
