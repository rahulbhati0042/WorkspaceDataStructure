package com.palindrome;

public class Palindrom_Main {
	public static void main(String[] args) {
		String str = "malayalam";
		Data data = isPalindrome(str);
		System.out.println("Length :"+data.length+" , isPalindrome :"+data.palindrome);
	}

	public static Data isPalindrome(String str) {
		Data data = null;
		data.length = str.length();
		char q[] = new char[str.length()];

		int j = 0;
		for (int i = str.length() - 1; i >= 0; i--, j++)
			q[j] = str.charAt(i);

		for (int i = 0; i < str.length(); i++)
			data.palindrome = q[i] != str.charAt(i) ? 1 : 0;

		return data;
	}

	static class Data {
		int length;
		int palindrome;
	}
}
