package com.recursion.problems;

public class ReverseArrayProblem {
	public static void main(String[] args) {
		int arr[] = { 1, 2, 3, 4, 5 };
		reverse(0, arr.length - 1, arr);
	}
	private static void reverse(int l,int r, int arr[]){
		if(l==r) return;
		int temp = arr[l];
		arr[l] = arr[r];
		arr[r]  = temp;
		reverse(l++, r--, arr);
	}
}
