package com.pancakesort;

import java.util.Arrays;

public class PancakeSort {

	public static void main(String[] args) {
		int arr[] = { -11, -1, 1, 1, 1, 1, 2, 1, 0 };
		int m = arr.length - 1;
		int l = 0, h = arr.length - 1;
		while (m >= 0) {
			int mi = 0;
			int max = 0;
			int e = 0;
			while (e <= m) {
				if (max < arr[e]) {
					max = arr[e];
					mi = e;
				}
				e++;
			}
			l = 0;
			h = mi;
			while (l < h) {
				int tmp = arr[l];
				arr[l] = arr[h];
				arr[h] = tmp;
				l++;
				h--;
			}
			l = 0;
			h = m;
			while (l < h) {
				int tmp = arr[l];
				arr[l] = arr[h];
				arr[h] = tmp;
				l++;
				h--;
			}
			m--;
		}
		System.out.println(Arrays.toString(arr));

	}

}
