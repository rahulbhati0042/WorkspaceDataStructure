package com.recursion.problems;

public class PalindromeProblem {
	static int arr[] = { 1, 2, 3, 2, 1 };

	public static void main(String[] args) {
		System.out.println(palindrome(0));
	}
	private static boolean palindrome(int i){
		boolean isPalimdrope= false;
		if(i>=arr.length/2){
			isPalimdrope= true;
		}
		
		else if(arr[i]==arr[arr.length-i-1]){
			isPalimdrope=true;
			palindrome(i+1);
		}
		return isPalimdrope;
		
	}

}
