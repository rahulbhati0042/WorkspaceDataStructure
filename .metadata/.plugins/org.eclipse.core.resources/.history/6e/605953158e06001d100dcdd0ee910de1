package com.arrayproblems;

import java.util.Arrays;

public class QuickLeftRotation {

	public static void main(String[] args) {
		long arr[] = { 1, 2, 3, 4, 5, 6, 7 };
		int k = 100;
		int n = arr.length;
		if (k > n) {
			k = k % n;
		}
		long tmp[] = new long[k];
		for (int i = 0; i < k; i++) {
			tmp[i] = arr[i];
		}
		long rotate[] = new long[n];
		int j = 0;
		for (int i = k; i < n; i++) {
			rotate[j] = arr[i];
			j++;
		}
		for (int i = 0; i < k; i++) {
			rotate[j] = tmp[i];
			j++;
		}
		for (int i = 0; i < n; i++) {
			arr[i] = rotate[i];
		}

		System.out.println(Arrays.toString(arr));
	}

}
