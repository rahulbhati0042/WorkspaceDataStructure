package com.arrayproblems;

import java.util.Arrays;

public class QuickLeftRotation {

	public static void main(String[] args) {
		long arr[] = { 1, 2, 3, 4, 5, 6, 7 };
		int k = 8;
		int n = arr.length;
		long first = arr[0];
		if (k > n) {
			k = k % n;
		}
		for (int i = 0; i < k; i++) {
			first = arr[0];

			for (int j = 1; j < n; j++) {
				arr[j - 1] = arr[j];
			}
			arr[n - 1] = first;
		}
		System.out.println(Arrays.toString(arr));
	}

}
