package com.pancakesort;


public class PancakeSort {

	public static void main(String[] args) {
		int arr[] = { 44, 11, 99, 77, 33, 22, 55 };
		int m = arr.length - 1;
		int l = 0, h = arr.length - 1;
		while (m >= 0) {
			int mi = 0;
			int max = 0;
			int e = 0;
			while (e <= m) {
				if (max < arr[e]) {
					max = arr[e];
					mi = e;
				}
				e++;
			}
			System.out.println("Max index :"+mi);

			m--;
		}

	}

}
