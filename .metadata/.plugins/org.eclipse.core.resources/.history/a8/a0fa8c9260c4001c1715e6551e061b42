package com.arrayproblems;

public class FirstAndLastOccurrenceForAllItems {
	public static void main(String[] args) {

		int arr[] = { 5, 5, 7, 7, 7, 9, 11 };
		int l = 0;
		int r = arr.length - 1;
		int first = l, last = l;
		int i = 1;
		while (l < r) {

			first = last = l;
			if (arr[l] == arr[l + i]) {
				last = l + i;
				i++;
			} else {
				l++;
				i = 1;
			}
			if (i == 1) {
				System.out.println("Firsst O of :" + arr[l] + " is :" + first);
				System.out.println("Last O of :" + arr[l] + " is :" + last);
				System.out.println("========================");

			}
		}
	}
}
