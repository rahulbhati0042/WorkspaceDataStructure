package com.bst;

public class BST_MaxDiameter {
	static Node root;
	static int maxDiameter = 0;

	public static void main(String[] args) {
		//int arr[] = { 50, 70, 60, 80, 55, 65, 79, 90, 54, 68, 64, 66, 85, 100,
		///		66, 59 };
		int arr[] = {40,80,54,62,12,50,45,42};
		for (int i = 0; i < arr.length; i++)
			insertion(arr[i]);
		heights(root);
		System.out.println("Max Diameter : " + maxDiameter);
	}

	public static int heights(Node t) {
		if (t == null)
			return 0;
		System.out.println(t.data);
		int left = heights(t.left);
		System.out.println("Left :"+left);
		int right = heights(t.right);
		System.out.println("right :"+right);
		int localDiameter = left + right + 1;
		maxDiameter = Math.max(localDiameter, maxDiameter);
		return Math.max(left, right) + 1;
	}

	public static void insertion(int data) {
		Node n = new Node();
		n.data = data;
		n.left = n.right = null;
		if (root == null) {
			root = n;
			return;
		}
		Node j = root;
		while (true) {
			if (j.data > n.data) {
				if (j.left == null) {
					j.left = n;
					break;
				} else
					j = j.left;

			} else {
				if (j.right == null) {
					j.right = n;
					break;
				} else
					j = j.right;
			}
		}

	}
}
