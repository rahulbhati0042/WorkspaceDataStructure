package com.gcf;

public class EclideanAlgorithm_Recursion {
	public static void main(String[] args) {
		int numA = 75;
		int numB = 50;

		int e = 0;
		int f = 0;
		if (numA > numB) {
			e = numA;
			f = numB;
		} else {
			e = numB;
			f = numA;
		}

		while (f != 0 && (e / f) != 0) {
			int a = e / f;
			int b = e % f;
			e = f;
			f = b;
		}
		System.out.println(e);
		recursion(e, f);
	}
	
	public static void recursion(int p,int q){
		if(q==0){
			System.out.println(p);
			return;
			
		}
		recursion(q, p%q);
	}
}
