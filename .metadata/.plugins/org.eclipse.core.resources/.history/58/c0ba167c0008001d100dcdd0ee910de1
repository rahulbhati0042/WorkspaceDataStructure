package com.arrayproblems;

public class SegregateEvenOdd {

	public static void main(String[] args) {
		int arr[] = {12, 34, 45, 9, 8, 90, 3};
		int n = arr.length;
		 int count =0; 
	        for(int i=0; i<n; i++){
	            if(arr[i]%2==0) count++;
	        }
	        System.out.println(count);
	}

}
