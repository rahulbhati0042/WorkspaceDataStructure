		//int arr[] = { 5,8,8};
		int arr[] = { 5,2,1,4};
		int left =0;
		int right = arr.length-1;
		boolean isValidMountain = false;
		while(left<=right){
			if(arr[left] <= arr[right]){
				left++;
				right--;
