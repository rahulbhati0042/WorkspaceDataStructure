package com.knapsack;

public class KnapshakBounded_BrutForce {
	static int sumValue = 0;
	static int anotherVar=0;
	public static void main(String[] args) {
		int weightArray[] = { 1, 2, 3, 4, 5, 6 };
		int valueArray[] = { 1, 2, 3, 4, 5, 6 };
		int size = weightArray.length-1;
		int capacity = 50;
		int result = getKnapsackFillValue(weightArray, valueArray, size, capacity);
		System.out.println(result);
	}

	public static int getKnapsackFillValue(int weightArray[], int valueArray[],
			int size, int capacity) {
		return getKnapsack(weightArray, valueArray, size, capacity, 0);
	}

	private static int getKnapsack(int[] weightArray, int[] valueArray,
			int size, int capacity, int index) {
		if(capacity<0 && index == size && index <0) return Math.max(sumValue, anotherVar);
		if (capacity <= index) {
			sumValue = valueArray[index]+getKnapsack(weightArray, valueArray, size, capacity-1, index+1);
		}else{
			anotherVar = getKnapsack(weightArray, valueArray, size, capacity, index+1);
		}
		return Math.max(sumValue, anotherVar);
	}
}
