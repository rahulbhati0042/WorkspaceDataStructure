package com.doublylinkedlist;

public class MultiLevelDoublyLinkedList {
	static Node head;

	static class Node {
		int data;
		Node child;
		Node next;
	}

	public static void main(String[] args) {

		int arr[] = { 10, 50, 5, 70, 62, 93, 84, 0, 0, 0, 70, 50, 0, 0, 67 };
		for (int i = 0; i < arr.length; i++) {

			addAtEnd(arr[i]);

		}

	}

	public static void addAtEnd(int data) {
		Node n = new Node();
		n.data = data;
		n.next = n.child = null;
		int count = 0;
		if (head == null) {
			head = n;
		} else if (data != 0) {
			if (count == 0) {
				Node j = head;
				while (j != null) {
					j = j.next;
				}
				j.next = n;
			} else {
				Node j = head;
				while (count != 0) {
					j = j.next;
					count--;
				}
				j.next = n;
			}
		} else {
			count++;

		}

	}
}
