package com.cocktailshaker;

public class Cocktrail_Shaker_Sort {
	public static void main(String[] args) {
		int arr[] = { 5, 6, 6, 7, 9, 3, 6, 8, 44, 77 };
		int lb = 0;
		int ub = arr.length - 1;
		int tmp = 0;
		boolean swapHappend = true;

		while (swapHappend) {
			swapHappend = false;
			while (lb < ub) {
				if (lb + 1 < ub && arr[lb] > arr[lb + 1]) {
					tmp = arr[lb];
					arr[lb] = arr[lb + 1];
					arr[lb + 1] = tmp;
					swapHappend = true;
				}
				lb++;
			}
			

		}

	}
}
