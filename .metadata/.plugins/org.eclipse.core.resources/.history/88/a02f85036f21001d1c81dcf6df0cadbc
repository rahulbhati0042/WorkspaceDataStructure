package com.pancakesort;

import java.util.Arrays;

public class PancakeSort {

	public static void main(String[] args) {
		int arr[] = { 44, 11, 99, 77, 33, 22, 55 };
		int m = arr.length-1;
		int l = 0, h = arr.length-1;
		while (m > 0) {
			int max = 0;
			int mi = 0;
			int e = 0;
			l = 0;
			h = m;
			while (l < h) {
				if (max < arr[l]) {
					max = arr[l];
					mi = l;
				}
				l++;
			}
			h = mi;
			while (l < h) {
				int tmp = arr[l];
				arr[l] = arr[h];
				arr[h] = tmp;
				l++;
				h--;
			}
			l = 0;
			h = m;
			while (l < h) {
				int tmp = arr[l];
				arr[l] = arr[h];
				arr[h] = tmp;
				l++;
				h--;
			}

			m--;
		}
		System.out.println(Arrays.toString(arr));

	}

}
