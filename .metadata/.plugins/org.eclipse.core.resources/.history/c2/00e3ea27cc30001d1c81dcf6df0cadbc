package com.subarray;

public class Kadane_MaxSubArray_Pair {

	public static void main(String[] args) {
		int arr[] = { -10, 2, 7, -6, -9, -3 };

		int maxSum = 0;
		int localMax = arr[0];
		int globalMax = arr[0];
		int si =0;//starting index;
		int ei = 0;// end index
		int e =1;
		while(e<arr.length){
			
			if(arr[e]>(localMax+arr[e])){
				localMax = arr[e];
				si =e;
			
			}else{
				localMax = localMax+arr[e];
			}
			if(localMax>globalMax){
				globalMax = localMax;
				si =e;
				
			}else{
				
			}
			
			
			e++;
		}
		System.out.println("Sub array start and end index :"+si +", "+ei);
		System.out.println(globalMax);

	}

}
