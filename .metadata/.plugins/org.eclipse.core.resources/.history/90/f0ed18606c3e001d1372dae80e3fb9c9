package com.arrayproblems;

public class FindKthLargest {
	public static void main(String[] args) {
		int a[] = { 45, 43, 75, 51, 66, 29, 90 };
		int kth = 4;
		int result = findKthLargest(a, kth);
		System.out.println(result);
	}

	public static int findKthLargest(int[] nums, int k) {
		boolean swpHappend = true;
		int e = 0;
		int target = nums.length - k;
		int tmp = 0;
		while (swpHappend) {
			swpHappend = false;
			e = 0;
			while (e < target) {
				if (nums[e] > nums[target]) {
					tmp = nums[e];
					nums[e] = nums[target];
					nums[target] = tmp;
					swpHappend = true;
				}
				e++;
			}
			e = nums.length - 1;
			while (e > target) {
				if (nums[e] < nums[target]) {
					tmp = nums[e];
					nums[e] = nums[target];
					nums[target] = tmp;
					swpHappend = true;
				}
				e--;
			}
		}
		return nums[target];
	}
}
